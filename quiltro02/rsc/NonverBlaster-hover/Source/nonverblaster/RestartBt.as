package nonverblaster {	import flash.display.*;	import flash.events.*;	public class RestartBt extends Sprite {				private var main:MovieClip;				public function RestartBt(){			init();		}		private function init(){			main = Main(root);			this.buttonMode = true;			this.addEventListener(MouseEvent.ROLL_OVER, btHandler);			this.addEventListener(MouseEvent.ROLL_OUT, btHandler);			this.addEventListener(MouseEvent.CLICK, btHandler);		}		public function setTint(){			Colorizer.colorize(grf, Glo.bal.controlColour);		}		private function btHandler(event:Event){			switch (event.type) {				case "click" :					main.playVideo();					main.startHideTimer();					break;				case "rollOver":					back.alpha = .7;					grf.nextFrame();					break;				case "rollOut":					back.alpha = .6;					grf.prevFrame();					break;			}		}	}}