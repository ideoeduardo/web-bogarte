package nonverblaster {	import flash.display.*;	import flash.net.*;	import flash.events.*;	import flash.geom.*;	import fl.transitions.easing.*;	import fl.transitions.*;		public class Teaser extends MovieClip{				public var isOn				:Boolean = false;				private var urlReq			:URLRequest;		private var photo			:Bitmap = new Bitmap();		private var loader			:Loader = new Loader();				private var tween:Tween;		private var main:MovieClip;				public function Teaser(){		}		public function init(main){			this.main = main;		}		public function loadPic(url){			loader.contentLoaderInfo.addEventListener(Event.COMPLETE, completeHandler);			loader.contentLoaderInfo.addEventListener(IOErrorEvent.IO_ERROR, errorHandler);			urlReq = new URLRequest(url);			loader.load(urlReq);		}		private function completeHandler(e:Event){			saveJPG(e.target.content.bitmapData);			activatePlayer();			main.visible = true;		}		private function errorHandler(e:Event){			//main.showError("No image was found here: \n" + Glo.bal.teaserURL);			activatePlayer();			main.control.fitToScreen(false, 0, 0, stage.stageWidth, stage.stageHeight + 20);			main.visible = true;		}		private function saveJPG(photoData){			photo.bitmapData = new BitmapData(photoData.width, photoData.height);			photo.bitmapData.copyPixels(photoData, new Rectangle(0, 0, photo.width, photo.height), new Point(0, 0));			photo.smoothing = true;			this.addChild(photo);		}		private function activatePlayer(){			isOn = true;			main.fitToScreen();		}	}}